{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "types": ["node", "jest"]
    },
    "include": ["wrappers/**/*", "scripts/**/*", "tests/**/*"],
    "exclude": ["node_modules", "dist"]
}
